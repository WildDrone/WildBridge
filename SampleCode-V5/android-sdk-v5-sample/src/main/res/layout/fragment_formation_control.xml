<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Left Panel - Controls -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingEnd="8dp">

        <!-- Role Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Formation Role"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_leader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Leader"
                android:layout_marginEnd="4dp"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_follower"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Follower"
                android:layout_marginStart="4dp"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Leader IP Input (for follower) -->
        <LinearLayout
            android:id="@+id/layout_leader_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/et_leader_ip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Leader IP"
                android:inputType="text"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect"
                android:layout_marginStart="4dp"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Formation Controls -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Formation Control"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btn_start_formation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start"
                android:layout_marginEnd="2dp"
                android:enabled="false"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_stop_formation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stop"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:enabled="false"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_emergency_stop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EMERGENCY"
                android:layout_marginStart="2dp"
                android:backgroundTint="#FF0000"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- Manual Override Controls -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manual Override"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <Button
                android:id="@+id/btn_takeoff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Takeoff"
                android:layout_marginEnd="2dp"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_land"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Land"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_rth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RTH"
                android:layout_marginStart="2dp"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_enable_virtual_stick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enable VS"
                android:layout_marginEnd="2dp"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_disable_virtual_stick"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Disable VS"
                android:layout_marginStart="2dp"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Right Panel - Status and Telemetry -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <!-- Status Display -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Connection and Formation Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp"
                android:background="#E8F5E8"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connection:"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_connection_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Role Selected"
                    android:textSize="14sp"
                    android:textColor="#2E7D32" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:background="#E3F2FD"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Formation:"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_formation_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Formation Inactive"
                    android:textSize="14sp"
                    android:textColor="#1976D2" />
            </LinearLayout>
        </LinearLayout>

        <!-- Telemetry Data in Horizontal Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <!-- My Drone Telemetry -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Drone"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_my_telemetry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Position: --\nAltitude: --\nHeading: --\nBattery: --%"
                        android:fontFamily="monospace"
                        android:textSize="12sp"
                        android:background="#F5F5F5"
                        android:padding="8dp" />
                </ScrollView>
            </LinearLayout>

            <!-- Other Drone Telemetry -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other Drone"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_other_telemetry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Position: --\nAltitude: --\nHeading: --\nBattery: --%\nDistance: --"
                        android:fontFamily="monospace"
                        android:textSize="12sp"
                        android:background="#F5F5F5"
                        android:padding="8dp" />
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
