<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/trajectory_recording_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Aircraft Location Display -->
    <TextView
        android:id="@+id/tv_aircraft_location_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aircraft_location_label"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_aircraft_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aircraft_location_default"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_aircraft_location_label" />

    <!-- Horizontal Layout for Recording and Replay Sections -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_margin="8dp"
        app:layout_constraintWidth_percent="0.48"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_aircraft_location">

        <!-- Recording Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_recording_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recording_controls"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@color/gray"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_recording_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/status_stopped"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_recording_section" />

            <Button
                android:id="@+id/btn_start_recording"
                style="@style/main_fragment_btn"
                android:text="@string/start_recording"
                android:background="@color/green"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_recording_status" />

            <Button
                android:id="@+id/btn_stop_recording"
                style="@style/main_fragment_btn"
                android:text="@string/stop_recording"
                android:background="@color/red"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_start_recording" />

            <Button
                android:id="@+id/btn_capture_waypoint"
                style="@style/main_fragment_btn"
                android:text="@string/capture_waypoint"
                android:background="@color/blue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_stop_recording" />

            <TextView
                android:id="@+id/tv_waypoint_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/waypoints_default"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_capture_waypoint" />

            <Button
                android:id="@+id/btn_save_trajectory"
                style="@style/main_fragment_btn"
                android:text="@string/save_trajectory"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_waypoint_count" />

            <TextView
                android:id="@+id/tv_current_trajectory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/current_trajectory_none"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_save_trajectory" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Replay Section -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_margin="8dp"
        app:layout_constraintWidth_percent="0.48"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_aircraft_location">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_replay_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/replay_controls"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@color/gray"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_load_trajectory"
                style="@style/main_fragment_btn"
                android:text="@string/load_trajectory"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_replay_section" />

            <TextView
                android:id="@+id/tv_mission_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/status_not_loaded"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_load_trajectory" />

            <Button
                android:id="@+id/btn_start_replay"
                style="@style/main_fragment_btn"
                android:text="@string/start_replay"
                android:background="@color/green"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_mission_status" />

            <Button
                android:id="@+id/btn_pause_replay"
                style="@style/main_fragment_btn"
                android:text="@string/pause_replay"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_start_replay" />

            <Button
                android:id="@+id/btn_stop_replay"
                style="@style/main_fragment_btn"
                android:text="@string/stop_replay"
                android:background="@color/red"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_pause_replay" />

            <TextView
                android:id="@+id/tv_mission_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mission_progress_default"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_stop_replay" />

            <TextView
                android:id="@+id/tv_current_waypoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/current_waypoint_none"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_mission_progress" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
